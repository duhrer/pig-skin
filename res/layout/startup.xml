<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:layout_gravity="center"
    >
	<ImageView
		android:src="@drawable/logo"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
		android:scaleType="centerInside"
	/>
	<Button
		android:id="@+id/startupSearchButton"
		android:layout_width="fill_parent"
		android:layout_height="50px"
		android:text="Search Dictionary"
	/>
	<Button
		android:id="@+id/startupBingoButton"
		android:layout_width="fill_parent"
		android:layout_height="50px"
		android:text="Find Bingo"
	/>
	<Button
		android:id="@+id/startupBingoBenefitsButton"
		android:layout_width="fill_parent"
		android:layout_height="50px"
		android:text="Bingo + Benefits"
	/>
	<Button
		android:id="@+id/startupPrefsButton"
		android:layout_width="fill_parent"
		android:layout_height="50px"
		android:text="Preferences"
	/>
	<Button
		android:id="@+id/startupQuitButton"
		android:layout_width="fill_parent"
		android:layout_height="50px"
		android:text="Quit"
	/>
</LinearLayout>
